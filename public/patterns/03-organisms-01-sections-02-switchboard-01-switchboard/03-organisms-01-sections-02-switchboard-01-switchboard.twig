<div class="jcc-switchboard jcc-switchboard--{{ background_variant }} ">
	<div class="jcc-switchboard__container">
		<header class="jcc-header-group">
			<p class="jcc-header-group__brow">{{ brow }}</p>
			<h2 class="jcc-header-group__title">{{ title }}</h2>
		</header>
		<div class="jcc-switchboard__content">
			<ul class="jcc-switchboard__tiles">
				{% for tile in switchboard_tiles %}
				<li class="jcc-switchboard__tile">
					<div class="jcc-tile">
						<p class="jcc-tile__brow">{{ tile.brow }}</p>
						<h3 class="jcc-tile__title">{{ tile.title_link|raw }}</h3>
					</div>
				</li>
				{% endfor %}
			</ul>
			<ul class="jcc-switchboard__tiles jcc-switchboard__tiles--secondary">
				{% for tile in switchboard_tiles2 %}
				<li class="jcc-switchboard__tile">
					<div class="jcc-tile">
						<p class="jcc-tile__brow">{{ tile.brow }}</p>
						<h3 class="jcc-tile__title">{{ tile.title_link|raw }}</h3>
					</div>
				</li>
				{% endfor %}
			</ul>
		</div>
	</div>
</div>
