{% if icon %}
  {% spaceless %}
    <svg class="jcc-logo icon-{{ icon }}" role="img"
      {%- if title %} title="{{ title }}"{% endif -%}
      {%- if decorative %} aria-hidden="true"{% endif -%}>
      <use xlink:href="{{ icon_file }}#i-{{ icon }}"></use>
    </svg>
  {% endspaceless %}
{% endif %}