<div class="jcc-text-section jcc-text-section--{{ background_variant }}">
	<div class="jcc-text-section__container">
		<header class="jcc-header-group">
			<h2 class="jcc-header-group__title">{{ title }}</h2>
			<p class="jcc-header-group__lead">{{ lead }}</p>
		</header>
		<div class="jcc-text-section__content jcc-text-section__content--{{ column_variant }}">
			<div class="jcc-text-section__column-left">
				{{ column_content_left|raw }}
			</div>
			<div class="jcc-text-section__column-right">
				{{ column_content_right|raw }}
			</div>
		</div>
	</div>
</div>


