{% set tag = tag|default('h2') %}

<header class="jcc-header-group">
  {% if brow %}
  <p class="jcc-header-group__brow">{{ brow }}</p>
  {% endif %}
  <{{ tag }} class="jcc-header-group__title">{{ title }}</{{ tag }}>
  {% if lead %}
  <div class="jcc-header-group__lead">{{ lead }}</div>
  {% endif %}
  {% if body %}
  <div class="jcc-header-group__body">{{ body }}</div>
  {% endif %}
</header>
