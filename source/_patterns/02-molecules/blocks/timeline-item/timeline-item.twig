<li class="jcc-timeline-item">
  <h3 class="jcc-timeline-item__title">{{ title }}</h3>
  <div class="jcc-timeline-item__excerpt">{{ excerpt }}</div>

  {% if read_more_link %}
  <a href="{{ url }}" class="jcc-timeline-item__trigger"{% if url_attributes %}{{ url_attributes }}{% endif %}>{{ read_more_link }}</a>
  {% endif %}
  
</li>