{#
/**
 * Available variables:
 * - section - primary variable
 *   - variant: [alt-background, white-background] - component variants
 *   - heading: the heading (title & lead)
 *   - content: the main content
 *   - id: the html "id" of the section
 *   - no_container: boolean - don't use a container to constrain content
 *   - attributes: Drupal attributes
 *   - classes: array of classes to add to component
 */
#}

{% set variant = section.variant ? section.variant : 'default' %}
{% set attributes = section.attributes ?? create_attribute() %}
{% if section.id %}
  {% set attributes = attributes.setAttribute('id', section.id) %}
{% endif %}

{% set classes = [
  'jcc-section',
  'jcc-section--' ~ variant,
  section.no_container ? 'jcc-section--no-container' : 'jcc-section--container',
]|merge(section.classes|default([])) %}

<section {{attributes.addClass(classes) }}>
  <div class="jcc-section__inner">
    {% if section.heading %}
      {% include "@molecules/section-heading/section-heading.twig" with {
        section_heading: section.heading
      } %}
    {% endif %}

    {{ section.content }}
  </div>
</section>
