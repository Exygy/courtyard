<div class="jcc-filelist">
  <h2 class="jcc-filelist__title">{{ title }}</h2>
  <ul class="jcc-filelist__list">
    {% for file in files %}
      <li class="jcc-filelist__item">
        <span class="jcc-filelist__icon">
          {% include '@atoms/icons/icon.twig' with  {
            icon: icon.icon,
            title: icon.title,
            icon_file: icon.icon_file,
            decorative: icon.decorative
          } %}
        </span>
        <a download href="{{file.url}}" title="{{file.name}}">{{file.name}}</a>
      </li>
    {% endfor %}
  </ul>
</div>