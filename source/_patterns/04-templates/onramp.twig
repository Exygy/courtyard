{% include '@organisms/global/header/header.twig' %}
{% include '@molecules/blocks/hero/hero.twig' with {
  title: top.hero.title,
  lead: top.hero.lead,
  column_variant: top.hero.column_variant,
  column_content_right: top.hero.column_content_right,
  background_variant: top.hero.background_variant,
  title_variant: top.hero.title_variant,
  breadcrumbs: top.breadcrumbs
} %}

{% for entry in entries %}
  {% if entry.type == 'postcard' %}
    {% include '@molecules/blocks/postcard/postcard.twig' with {
      image: entry.postcard.image,
      alt: entry.postcard.alt,
      background_variant: entry.postcard.background_variant,
      header_align_variant: entry.postcard.header_align_variant,
      tag: entry.tag.image,
      headergroup: entry.headergroup
    } %}
  {% elseif entry.type == 'section' %}
    {% include '@organisms/sections/text-section/text-section.twig' with {
      column_content_left: entry.column_content_left,
      column_content_right: entry.column_content_right,
      column_variant: entry.column_variant,
      headergroup: entry.headergroup
    } %}
  {% elseif entry.type == 'steps' %}
    {% include '@organisms/sections/steps/steps.twig' with {
      headergroup: entry.headergroup
    } %}
  {% endif %}
{% endfor %}
