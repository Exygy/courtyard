{
  "css": {
    "project_scss": "source/css",
    "public_folder": "public/css",
    "styleguide_public_folder": "public/styleguide/css",
    "src": ["source/_patterns/*.scss", "source/_patterns/**/*.scss", "source/css/*.scss"],
    "styleguide_src": "source/styleguide/css/*.css"
  },
  "fonts": {
    "source_fonts": "source/fonts/**/**",
    "public_fonts": "public/fonts"
  },
  "images": {
    "public_images": "public/img"
  },
  "icons": {
    "sprite_src": "source/images/icomoon/symbol-defs.svg",
    "sprite_dest": "source/_patterns/01-atoms/icons"
  },
  "js": {
    "src": ["source/js/*.js", "source/js/**/*.js", "source/_patterns/**/*.js"],
    "dest": "public/js"
  },
  "pattern_lab": {
    "src": [
      "source/_patterns/**/*.twig",
      "source/_meta/*.twig",
      "source/_patterns/**/*.json",
      "source/_patterns/**/*.yml"
    ]
  }
}
